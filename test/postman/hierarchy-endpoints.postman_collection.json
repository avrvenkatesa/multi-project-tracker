{
  "info": {
    "name": "Multi-Project Tracker - Hierarchical Issues",
    "description": "Complete API collection for testing hierarchical issue management endpoints. Includes authentication, effort rollups, dependency tracking, and project hierarchy visualization.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "projectId",
      "value": "",
      "type": "string"
    },
    {
      "key": "issueId",
      "value": "",
      "type": "string"
    },
    {
      "key": "parentIssueId",
      "value": "",
      "type": "string"
    },
    {
      "key": "childIssueId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "noauth"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"User data returned\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "    pm.expect(jsonData.user).to.have.property('id');",
                  "    pm.expect(jsonData.user).to.have.property('email');",
                  "});",
                  "",
                  "pm.test(\"Token cookie set\", function () {",
                  "    pm.expect(pm.cookies.has('token')).to.be.true;",
                  "    const token = pm.cookies.get('token');",
                  "    pm.collectionVariables.set('authToken', token);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@multiproject.com\",\n  \"password\": \"demo123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            },
            "description": "Authenticate and receive JWT token in cookie"
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for obtaining JWT tokens"
    },
    {
      "name": "Hierarchy Management",
      "item": [
        {
          "name": "1. Create Issue with Parent Linkage",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Issue created successfully\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Issue has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('title');",
                  "    pm.expect(jsonData).to.have.property('project_id');",
                  "    ",
                  "    // Save issue ID for subsequent requests",
                  "    pm.collectionVariables.set('issueId', jsonData.id);",
                  "});",
                  "",
                  "pm.test(\"Parent linkage correct\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var requestBody = JSON.parse(pm.request.body.raw);",
                  "    ",
                  "    if (requestBody.parentIssueId) {",
                  "        pm.expect(jsonData.parent_issue_id).to.eql(requestBody.parentIssueId);",
                  "    }",
                  "    if (requestBody.isEpic !== undefined) {",
                  "        pm.expect(jsonData.is_epic).to.eql(requestBody.isEpic);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"projectId\": {{projectId}},\n  \"title\": \"Mobile App Development\",\n  \"description\": \"Build iOS and Android apps for Q4 launch\",\n  \"priority\": \"high\",\n  \"parentIssueId\": {{parentIssueId}},\n  \"isEpic\": true,\n  \"estimatedEffortHours\": 80\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/issues",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues"]
            },
            "description": "Create a new issue with optional parent-child relationship. Supports hierarchical issue structures."
          },
          "response": []
        },
        {
          "name": "2. Get Issue Hierarchy",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Hierarchy retrieved successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Hierarchy has tree structure\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('issueId');",
                  "    pm.expect(jsonData).to.have.property('tree');",
                  "    pm.expect(jsonData.tree).to.have.property('id');",
                  "    pm.expect(jsonData.tree).to.have.property('title');",
                  "    pm.expect(jsonData.tree).to.have.property('children');",
                  "});",
                  "",
                  "pm.test(\"Tree contains effort data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.tree).to.have.property('effort');",
                  "    pm.expect(jsonData.tree.effort).to.be.a('number');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/issues/{{issueId}}/hierarchy",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues", "{{issueId}}", "hierarchy"]
            },
            "description": "Get complete hierarchical tree for an issue with all descendants"
          },
          "response": []
        },
        {
          "name": "3. Get Issue Children",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Children retrieved successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Children have required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.length > 0) {",
                  "        pm.expect(jsonData[0]).to.have.property('id');",
                  "        pm.expect(jsonData[0]).to.have.property('title');",
                  "        pm.expect(jsonData[0]).to.have.property('parent_issue_id');",
                  "        pm.expect(jsonData[0]).to.have.property('estimated_effort_hours');",
                  "        ",
                  "        // Save first child ID",
                  "        pm.collectionVariables.set('childIssueId', jsonData[0].id);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/issues/{{issueId}}/children",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues", "{{issueId}}", "children"]
            },
            "description": "Get all direct children (one level down) of a parent issue"
          },
          "response": []
        },
        {
          "name": "4. Calculate Effort Rollup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Rollup calculated successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Rollup has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('parentIssueId');",
                  "    pm.expect(jsonData).to.have.property('totalHours');",
                  "    pm.expect(jsonData).to.have.property('childCount');",
                  "    pm.expect(jsonData).to.have.property('children');",
                  "});",
                  "",
                  "pm.test(\"Total hours is numeric\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.totalHours).to.be.a('number');",
                  "    pm.expect(jsonData.totalHours).to.be.at.least(0);",
                  "});",
                  "",
                  "pm.test(\"Update status matches request\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var requestBody = JSON.parse(pm.request.body.raw);",
                  "    ",
                  "    if (requestBody.updateParent === true) {",
                  "        pm.expect(jsonData).to.have.property('updated');",
                  "        pm.expect(jsonData.updated).to.be.true;",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"updateParent\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/issues/{{issueId}}/calculate-rollup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues", "{{issueId}}", "calculate-rollup"]
            },
            "description": "Calculate total effort from all children and optionally update parent's estimate"
          },
          "response": []
        },
        {
          "name": "5. Update All Parent Efforts",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Parent efforts updated successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Update summary returned\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success');",
                  "    pm.expect(jsonData).to.have.property('projectId');",
                  "    pm.expect(jsonData).to.have.property('updatedCount');",
                  "    pm.expect(jsonData).to.have.property('totalHours');",
                  "    pm.expect(jsonData).to.have.property('parents');",
                  "});",
                  "",
                  "pm.test(\"Parents array has correct structure\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.parents).to.be.an('array');",
                  "    ",
                  "    if (jsonData.parents.length > 0) {",
                  "        pm.expect(jsonData.parents[0]).to.have.property('parentId');",
                  "        pm.expect(jsonData.parents[0]).to.have.property('totalHours');",
                  "        pm.expect(jsonData.parents[0]).to.have.property('childCount');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/update-parent-efforts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "update-parent-efforts"]
            },
            "description": "Update effort estimates for all parent issues in a project based on their children"
          },
          "response": []
        },
        {
          "name": "6. Get Estimate with Dependencies",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Estimate retrieved successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Estimate has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('issueId');",
                  "    pm.expect(jsonData).to.have.property('itemType');",
                  "    pm.expect(jsonData).to.have.property('baseEffort');",
                  "    pm.expect(jsonData).to.have.property('adjustedEffort');",
                  "    pm.expect(jsonData).to.have.property('bufferHours');",
                  "    pm.expect(jsonData).to.have.property('dependencies');",
                  "});",
                  "",
                  "pm.test(\"Breakdown included\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('breakdown');",
                  "    pm.expect(jsonData.breakdown).to.have.property('baseEffort');",
                  "    pm.expect(jsonData.breakdown).to.have.property('finalEstimate');",
                  "});",
                  "",
                  "pm.test(\"Dependencies is array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.dependencies).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/issues/{{issueId}}/estimate-with-dependencies",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues", "{{issueId}}", "estimate-with-dependencies"]
            },
            "description": "Get effort estimate including dependency analysis and buffer calculations"
          },
          "response": []
        },
        {
          "name": "7. Get Project Hierarchy",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Project hierarchy retrieved successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Hierarchy is array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Issues have hierarchy fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.length > 0) {",
                  "        pm.expect(jsonData[0]).to.have.property('id');",
                  "        pm.expect(jsonData[0]).to.have.property('title');",
                  "        pm.expect(jsonData[0]).to.have.property('depth');",
                  "        pm.expect(jsonData[0]).to.have.property('path');",
                  "        pm.expect(jsonData[0]).to.have.property('estimated_effort_hours');",
                  "    }",
                  "});",
                  "",
                  "pm.test(\"Root issues have depth 0\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var rootIssues = jsonData.filter(issue => issue.parent_issue_id === null);",
                  "    ",
                  "    rootIssues.forEach(function(issue) {",
                  "        pm.expect(issue.depth).to.equal(0);",
                  "    });",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/hierarchy",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "hierarchy"]
            },
            "description": "Get complete hierarchical structure of all issues in a project"
          },
          "response": []
        }
      ],
      "description": "Endpoints for managing hierarchical issue relationships, effort rollups, and dependency tracking",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Check if we have authentication token",
              "const authToken = pm.collectionVariables.get('authToken');",
              "",
              "if (!authToken) {",
              "    console.log('‚ö†Ô∏è No auth token found. Please run the Login request first.');",
              "}",
              "",
              "// Check if we have required IDs for this request",
              "const requestUrl = pm.request.url.toString();",
              "",
              "if (requestUrl.includes('/issues/{{issueId}}')) {",
              "    const issueId = pm.collectionVariables.get('issueId');",
              "    if (!issueId) {",
              "        console.log('‚ö†Ô∏è No issueId set. Please create an issue first or set the issueId variable.');",
              "    }",
              "}",
              "",
              "if (requestUrl.includes('/projects/{{projectId}}')) {",
              "    const projectId = pm.collectionVariables.get('projectId');",
              "    if (!projectId) {",
              "        console.log('‚ö†Ô∏è No projectId set. Please set the projectId variable.');",
              "    }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Error Scenarios",
      "item": [
        {
          "name": "Invalid Issue ID (NaN)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Returns 400 Bad Request\", function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test(\"Error message is descriptive\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "    pm.expect(jsonData).to.have.property('details');",
                  "    pm.expect(jsonData.error).to.include('Invalid issue ID');",
                  "    pm.expect(jsonData.details).to.include('positive integer');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/issues/abc/hierarchy",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues", "abc", "hierarchy"]
            },
            "description": "Test validation: non-numeric issue ID"
          },
          "response": []
        },
        {
          "name": "Non-existent Issue",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Returns 404 Not Found\", function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "",
                  "pm.test(\"Error message is descriptive\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "    pm.expect(jsonData).to.have.property('details');",
                  "    pm.expect(jsonData.error).to.include('not found');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/issues/999999/hierarchy",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues", "999999", "hierarchy"]
            },
            "description": "Test validation: issue doesn't exist"
          },
          "response": []
        },
        {
          "name": "Invalid updateParent Type",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Returns 400 Bad Request\", function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test(\"Error message mentions boolean\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "    pm.expect(jsonData).to.have.property('details');",
                  "    pm.expect(jsonData.details).to.include('boolean');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"updateParent\": \"yes\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/issues/{{issueId}}/calculate-rollup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "issues", "{{issueId}}", "calculate-rollup"]
            },
            "description": "Test validation: updateParent must be boolean"
          },
          "response": []
        }
      ],
      "description": "Test error handling and validation scenarios"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global pre-request script",
          "console.log('üîß Request to:', pm.request.url.toString());",
          "console.log('üìä Collection variables:');",
          "console.log('   baseUrl:', pm.collectionVariables.get('baseUrl'));",
          "console.log('   projectId:', pm.collectionVariables.get('projectId') || '(not set)');",
          "console.log('   issueId:', pm.collectionVariables.get('issueId') || '(not set)');",
          "console.log('   authToken:', pm.collectionVariables.get('authToken') ? '(set)' : '(not set)');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script",
          "pm.test(\"Response time is acceptable\", function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test(\"Response has JSON content-type\", function () {",
          "    pm.response.to.have.header('Content-Type');",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "});"
        ]
      }
    }
  ]
}
